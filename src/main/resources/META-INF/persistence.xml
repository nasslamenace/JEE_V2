<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="PJ-V2">
     <jta-data-source>mydatasource</jta-data-source>
    <class>com.mycompany.pj.Student</class>
    <class>com.mycompany.pj.Internship</class>
    <class>com.mycompany.pj.Company</class>
    <class>com.mycompany.pj.TabEvaluation</class>
    <class>com.mycompany.pj.Supervisor</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
       <property name="hibernate.dialect" value="org.hibernate.dialect.DB2Dialect"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/st2eedb?useUnicode=true &amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp; serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="adm"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="adm"/>
    </properties>
  </persistence-unit>
</persistence>
